<Page x:Class="WpfApp1.Page.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth" Background="White">
    <StackPanel Margin="203,142,175,120">
        <TextBlock Text="Логин"/>
        <TextBox x:Name="BoxLogin" />
        <TextBlock Text="Пароль"/>
        <PasswordBox x:Name="BoxPassword" />
        <TextBlock x:Name="Error" Text="Неверный логин ли пароль" Visibility="Hidden"/>
        <Button Content="Войти" Click="Auth_Btn" />
        <Button Content="Гость" Click="Goest_mod" x:Name="GuestBtn"/>
    </StackPanel>
</Page>
